{
  "name": "FilmEquipment Design System",
  "version": "1.0.0",
  "description": "Design system for FilmEquipment management app, inspired by Shelf.nu",
  "inspiration": "shelf.nu",
  "author": "FilmEquipment Team",
  
  "colors": {
    "primary": {
      "50": "#fff7ed",
      "100": "#ffedd5", 
      "200": "#fed7aa",
      "300": "#fdba74",
      "400": "#fb923c",
      "500": "#f97316",
      "600": "#ea580c",
      "700": "#c2410c",
      "800": "#9a3412",
      "900": "#7c2d12"
    },
    "gray": {
      "50": "#f9fafb",
      "100": "#f3f4f6",
      "200": "#e5e7eb",
      "300": "#d1d5db",
      "400": "#9ca3af",
      "500": "#6b7280",
      "600": "#4b5563",
      "700": "#374151",
      "800": "#1f2937",
      "900": "#111827"
    },
    "success": {
      "50": "#f0fdf4",
      "100": "#dcfce7",
      "200": "#bbf7d0",
      "300": "#86efac",
      "400": "#4ade80",
      "500": "#22c55e",
      "600": "#16a34a",
      "700": "#15803d",
      "800": "#166534",
      "900": "#14532d"
    },
    "warning": {
      "50": "#fffbeb",
      "100": "#fef3c7",
      "200": "#fde68a",
      "300": "#fcd34d",
      "400": "#fbbf24",
      "500": "#f59e0b",
      "600": "#d97706",
      "700": "#b45309",
      "800": "#92400e",
      "900": "#78350f"
    },
    "danger": {
      "50": "#fef2f2",
      "100": "#fee2e2",
      "200": "#fecaca",
      "300": "#fca5a5",
      "400": "#f87171",
      "500": "#ef4444",
      "600": "#dc2626",
      "700": "#b91c1c",
      "800": "#991b1b",
      "900": "#7f1d1d"
    },
    "info": {
      "50": "#eff6ff",
      "100": "#dbeafe",
      "200": "#bfdbfe",
      "300": "#93c5fd",
      "400": "#60a5fa",
      "500": "#3b82f6",
      "600": "#2563eb",
      "700": "#1d4ed8",
      "800": "#1e40af",
      "900": "#1e3a8a"
    }
  },

  "typography": {
    "fontFamily": {
      "sans": ["Inter", "system-ui", "sans-serif"],
      "mono": ["JetBrains Mono", "monospace"]
    },
    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem", 
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem"
    },
    "fontWeight": {
      "normal": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700"
    }
  },

  "spacing": {
    "xs": "0.25rem",
    "sm": "0.5rem",
    "md": "1rem",
    "lg": "1.5rem",
    "xl": "2rem",
    "2xl": "3rem",
    "3xl": "4rem"
  },

  "borderRadius": {
    "sm": "0.375rem",
    "md": "0.5rem",
    "lg": "0.75rem",
    "xl": "1rem",
    "2xl": "1.5rem",
    "full": "9999px"
  },

  "shadows": {
    "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
    "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1)",
    "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1)",
    "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1)"
  },

  "components": {
    "buttons": {
      "base": {
        "padding": "0.5rem 1rem",
        "borderRadius": "0.5rem",
        "fontWeight": "500",
        "fontSize": "0.875rem",
        "transition": "all 0.2s",
        "focusRing": "2px",
        "focusRingOffset": "2px"
      },
      "variants": {
        "primary": {
          "backgroundColor": "primary-500",
          "color": "white",
          "hover": "primary-600",
          "focusRing": "primary-500",
          "dark": {
            "backgroundColor": "primary-600",
            "hover": "primary-700"
          }
        },
        "secondary": {
          "backgroundColor": "gray-200",
          "color": "gray-900",
          "hover": "gray-300",
          "focusRing": "gray-500",
          "dark": {
            "backgroundColor": "gray-700",
            "color": "gray-200",
            "hover": "gray-600"
          }
        },
        "outline": {
          "backgroundColor": "transparent",
          "border": "1px solid gray-300",
          "color": "gray-700",
          "hover": "gray-50",
          "focusRing": "primary-500",
          "dark": {
            "border": "gray-600",
            "backgroundColor": "gray-800",
            "color": "gray-300",
            "hover": "gray-700"
          }
        },
        "success": {
          "backgroundColor": "success-600",
          "color": "white",
          "hover": "success-700",
          "focusRing": "success-500"
        },
        "warning": {
          "backgroundColor": "warning-600",
          "color": "white",
          "hover": "warning-700",
          "focusRing": "warning-500"
        },
        "danger": {
          "backgroundColor": "danger-600",
          "color": "white",
          "hover": "danger-700",
          "focusRing": "danger-500"
        }
      },
      "sizes": {
        "sm": {
          "padding": "0.375rem 0.75rem",
          "fontSize": "0.75rem"
        },
        "lg": {
          "padding": "0.75rem 1.5rem",
          "fontSize": "1rem"
        }
      }
    },

    "cards": {
      "base": {
        "backgroundColor": "white",
        "borderRadius": "0.75rem",
        "shadow": "sm",
        "border": "1px solid gray-200",
        "transition": "all 0.2s",
        "dark": {
          "backgroundColor": "gray-800",
          "border": "gray-700"
        }
      },
      "header": {
        "padding": "1.5rem",
        "borderBottom": "1px solid gray-200",
        "dark": {
          "borderBottom": "gray-700"
        }
      },
      "body": {
        "padding": "1.5rem"
      },
      "footer": {
        "padding": "1.5rem",
        "borderTop": "1px solid gray-200",
        "backgroundColor": "gray-50",
        "dark": {
          "borderTop": "gray-700",
          "backgroundColor": "gray-900"
        }
      }
    },

    "forms": {
      "input": {
        "base": {
          "width": "100%",
          "borderRadius": "0.5rem",
          "border": "1px solid gray-300",
          "padding": "0.5rem 0.75rem",
          "fontSize": "0.875rem",
          "transition": "all 0.2s",
          "focusRing": "2px",
          "focusRingOffset": "0",
          "dark": {
            "backgroundColor": "gray-700",
            "border": "gray-600",
            "color": "white"
          }
        },
        "focus": {
          "borderColor": "primary-500",
          "focusRing": "primary-500",
          "dark": {
            "borderColor": "primary-400",
            "focusRing": "primary-400"
          }
        }
      },
      "label": {
        "fontSize": "0.875rem",
        "fontWeight": "500",
        "color": "gray-700",
        "marginBottom": "0.25rem",
        "dark": {
          "color": "gray-300"
        }
      },
      "error": {
        "fontSize": "0.875rem",
        "color": "danger-600",
        "marginTop": "0.25rem",
        "dark": {
          "color": "danger-400"
        }
      }
    },

    "statusBadges": {
      "base": {
        "display": "inline-flex",
        "alignItems": "center",
        "padding": "0.25rem 0.5rem",
        "borderRadius": "9999px",
        "fontSize": "0.75rem",
        "fontWeight": "500"
      },
      "variants": {
        "available": {
          "backgroundColor": "success-50",
          "color": "success-700",
          "dark": {
            "backgroundColor": "success-900",
            "color": "success-300"
          }
        },
        "checked-out": {
          "backgroundColor": "warning-50",
          "color": "warning-700",
          "dark": {
            "backgroundColor": "warning-900",
            "color": "warning-300"
          }
        },
        "in-custody": {
          "backgroundColor": "info-50",
          "color": "info-700",
          "dark": {
            "backgroundColor": "info-900",
            "color": "info-300"
          }
        },
        "maintenance": {
          "backgroundColor": "gray-50",
          "color": "gray-700",
          "dark": {
            "backgroundColor": "gray-700",
            "color": "gray-300"
          }
        },
        "damaged": {
          "backgroundColor": "danger-50",
          "color": "danger-700",
          "dark": {
            "backgroundColor": "danger-900",
            "color": "danger-300"
          }
        }
      }
    },

    "tables": {
      "base": {
        "width": "100%",
        "backgroundColor": "white",
        "borderRadius": "0.75rem",
        "overflow": "hidden",
        "shadow": "sm",
        "border": "1px solid gray-200",
        "dark": {
          "backgroundColor": "gray-800",
          "border": "gray-700"
        }
      },
      "header": {
        "backgroundColor": "gray-50",
        "padding": "0.75rem 1.5rem",
        "textAlign": "left",
        "fontSize": "0.75rem",
        "fontWeight": "500",
        "color": "gray-700",
        "textTransform": "uppercase",
        "letterSpacing": "0.05em",
        "dark": {
          "backgroundColor": "gray-900",
          "color": "gray-300"
        }
      },
      "row": {
        "borderBottom": "1px solid gray-200",
        "hover": {
          "backgroundColor": "gray-50",
          "dark": {
            "backgroundColor": "gray-700"
          }
        },
        "dark": {
          "borderBottom": "gray-700"
        }
      },
      "cell": {
        "padding": "1rem 1.5rem",
        "fontSize": "0.875rem",
        "color": "gray-900",
        "dark": {
          "color": "gray-100"
        }
      }
    },

    "sidebar": {
      "base": {
        "width": "16rem",
        "backgroundColor": "white",
        "borderRight": "1px solid gray-200",
        "height": "100%",
        "dark": {
          "backgroundColor": "gray-800",
          "borderRight": "gray-700"
        }
      },
      "item": {
        "display": "flex",
        "alignItems": "center",
        "padding": "0.5rem 1rem",
        "fontSize": "0.875rem",
        "fontWeight": "500",
        "color": "gray-700",
        "borderRadius": "0.5rem",
        "margin": "0 0.5rem 0.25rem",
        "transition": "all 0.15s",
        "hover": {
          "backgroundColor": "gray-100",
          "dark": {
            "backgroundColor": "gray-700"
          }
        },
        "dark": {
          "color": "gray-300"
        }
      },
      "itemActive": {
        "backgroundColor": "primary-50",
        "color": "primary-700",
        "dark": {
          "backgroundColor": "primary-900",
          "color": "primary-300"
        }
      }
    }
  },

  "layout": {
    "container": {
      "maxWidth": "1280px",
      "margin": "0 auto",
      "padding": "0 1rem"
    },
    "grid": {
      "columns": 12,
      "gap": "1.5rem"
    },
    "breakpoints": {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px",
      "2xl": "1536px"
    }
  },

  "animations": {
    "transitions": {
      "fast": "150ms",
      "normal": "200ms",
      "slow": "300ms"
    },
    "easing": {
      "default": "cubic-bezier(0.4, 0, 0.2, 1)",
      "bounce": "cubic-bezier(0.68, -0.55, 0.265, 1.55)"
    }
  },

  "icons": {
    "size": {
      "sm": "1rem",
      "md": "1.25rem",
      "lg": "1.5rem",
      "xl": "2rem"
    },
    "stroke": "2px",
    "library": "Heroicons"
  },

  "gradients": {
    "primary": "linear-gradient(135deg, #f97316 0%, #ea580c 100%)",
    "textPrimary": "linear-gradient(135deg, #f97316 0%, #ea580c 100%)",
    "card": "linear-gradient(135deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0.05) 100%)"
  },

  "darkMode": {
    "enabled": true,
    "class": "dark",
    "storageKey": "darkMode",
    "default": "system"
  },

  "accessibility": {
    "focusRing": {
      "color": "primary-500",
      "width": "2px",
      "offset": "2px"
    },
    "contrast": {
      "minimum": "4.5:1",
      "enhanced": "7:1"
    }
  },

  "responsive": {
    "mobileFirst": true,
    "containerQueries": false
  }
}
