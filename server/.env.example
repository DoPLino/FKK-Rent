###########################################
# Example .env placeholders (copy per env)
###########################################

# Core
PORT=3001
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/filmequipment

# Development safeguards
# Explicitly enable mock dev login (only honored when NODE_ENV=development)
# Default is false; set to 'true' locally only if you understand the risk.
ENABLE_DEV_LOGIN=false

# JWT Configuration (DO NOT COMMIT real secrets)
JWT_ALGORITHM=HS256
ACCESS_TOKEN_SECRET=change_me_in_prod
ACCESS_TOKEN_SECRET_PREVIOUS=
ACCESS_TOKEN_EXPIRES=15m
REFRESH_TOKEN_SECRET=change_me_in_prod
REFRESH_TOKEN_SECRET_PREVIOUS=
REFRESH_TOKEN_EXPIRES=7d

# Email (optional) â€” prefer OAuth2 or provider API; avoid storing plain passwords
# Explicit sender (required if emails are sent)
EMAIL_FROM=

# SMTP settings (use with OAuth2; do NOT store SMTP passwords in .env)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=

# OAuth2 credentials for SMTP (recommended)
OAUTH_CLIENT_ID=
OAUTH_CLIENT_SECRET=
OAUTH_REFRESH_TOKEN=

# Or use a transactional email provider API (preferred for production)
# Example: SendGrid
SENDGRID_API_KEY=

# Deprecated: Do NOT use plain email passwords in env files
# EMAIL_PASS is intentionally omitted to prevent storing secrets insecurely

# OpenAI (optional)
OPENAI_API_KEY=

# File Uploads
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
MAX_FILES_PER_USER=50
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,application/pdf,image/webp
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.gif,.webp,.pdf

# Security
# Comma-separated list for multiple origins (e.g., http://localhost:3000,https://example.com)
CORS_ORIGIN=http://localhost:3000
# Enable CORS credentials (cookies/authorization headers) explicitly
CORS_CREDENTIALS=false
